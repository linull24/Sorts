{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "make release",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Debug",
            "type": "shell",
            "command": "./Debug/run.sh",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build Debug"
            ]
        },
        {
            "label": "Run Release",
            "type": "shell",
            "command": "./Release/run.sh",
            "group": "test",
            "dependsOn": [
                "Build Release"
            ]
        },
        {
            "label": "Open Debug Results",
            "type": "shell",
            "command": "./Debug/open.sh",
            "group": "none"
        },
        {
            "label": "Open Release Results",
            "type": "shell",
            "command": "./Release/open.sh",
            "group": "none"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "none"
        }
    ]
}